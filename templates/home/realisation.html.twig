<!-- ARTICLES -->
<section class="pt-7 pt-md-10">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <!-- Heading -->
                <h3 class="mb-0">
                    Dernieres réalisations
                </h3>

                <!-- Text -->
                <p class="mb-0 text-muted">
                    Mes realisations les plus recentes.
                </p>
            </div>
                    </div> <!-- / .row -->

            <!-- Card -->
        <div class="row">
            {% for peinture in peintures %}
            <div class="col-12">
            <div class="card card-row shadow-light-lg mb-6 lift lift-lg" data-aos="fade-right">
                <div class="row gx-0">

                    <a class="col-12 col-md-6  bg-cover card-img-start" style="background-image: url({{ vich_uploader_asset(peinture ,'imageFile')| imagine_filter('miniature')}});" href="{{ path('detail-realisation',{'slug': peinture.slug})}} ">

                        <!-- Image (placeholder) -->
                         <img src="{{ vich_uploader_asset(peinture ,'imageFile')| imagine_filter('miniature')}}" alt="..." class="img-fluid d-md-none invisible">


                        <!-- Shape -->
                        <div class="shape shape-end shape-fluid-y svg-shim text-white d-none d-md-block">
                            <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h62.759v172C38.62 384 112 517 112 517v173H0V0z" fill="currentColor"/></svg>
                        </div>

                    </a>
                    <div class="col-12 col-md-6 ">

                        <!-- Body -->
                        <a class="card-body" href="{{ path('detail-realisation',{'slug': peinture.slug}) }}">

                            <!-- Heading -->
                            <h3>
                                {{ peinture.nom }}
                            </h3>

                            <!-- Text -->
                            <p class="mb-0 text-muted">
                                {{ peinture.description }}.
                            </p>

                        </a>

                        <!-- Meta -->
                        <a class="card-meta" href="{{ path('detail-realisation',{'slug': peinture.slug}) }}">

                            <!-- Divider -->
                            <hr class="card-meta-divider">

                            <!-- Date -->
                            <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                                <time datetime="2019-05-02">Ajoutée le {{ peinture.createdAt|date('d/m/y') }}</time>
                            </p>

                        </a>
                    </div>
                </div>
            </div>
                </div> <!-- / .row -->
                {% endfor %}

</div>
    </div> <!-- / .container -->
</section>